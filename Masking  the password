#include<stdio.h>

#include<conio.h>

int main() {
    char c;
    char password[20];
    printf("Enter your password")
    int i = 0;
    while ((c = getch() != 13)) { // Where the task of getch to take the character value and 13 mean ASCCI value of enter 
        password[i] = c;
        i++;
        printf("-");

    }
    password[i] = '\0';
    printf("Enter the password is %s", password);
}
