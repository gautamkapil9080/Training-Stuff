#include<stdio.h>
#include<string.h>
struct bio{
        int age;
        char  name [15];
        float wt;
    };
int main(){
    struct bio b[3];
    for(int i=1;i<=3;i++){
        printf("Enter the age,name,wt for %d man ",i);
        scanf("%d",&b[i].age);
          scanf("%s",b[i].name);
            scanf("%f",&b[i].wt);
        
    }
    for(int i=1;i<=3;i++){
        printf("The name,age,wt%d man\n",i);
        printf("%d",b[i].age);
        printf("%s",b[i].name);
        printf("%f",b[i].wt);
        
    }
}
